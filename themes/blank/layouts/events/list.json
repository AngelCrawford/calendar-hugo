{{- $.Scratch.Add "eventsList" slice -}}
{{- range where .Site.RegularPages "Section" "=" "events" -}}

    {{- if .Resources -}}
      {{- range first 1 (.Resources.ByType "image") -}}
        {{- $img := .Fill "320x320" -}}

        {{- $.Scratch.Set "image" $img.Permalink -}}
        {{- $.Scratch.Set "imageCaption" $img.Params.Caption -}}

      {{- end -}}
    {{- end -}}

    {{- $.Scratch.Add "eventsList" (dict "title" .Title "url" .Permalink "subtitle" .Params.subtitle "authors" .Params.authors "summary" .Summary "filterKind" .Params.filter.kind "filterState" .Params.filter.state "start" .Params.dates.start "end" .Params.dates.end "dateEntry" .Params.dates.entry "allDay" .Params.dates.allDay "locationVenue" .Params.location.venue "locationAddress" .Params.location.address "locationShowMap" .Params.location.showMap "locationVirtual" .Params.location.virtual "pricePreSale" .Params.price.preSale "priceBoxOffice" .Params.price.boxOffice "infoCorona" .Params.info.corona "infoStatus" .Params.info.status "infoReason" .Params.info.reason "linkFacebook" .Params.link.facebook "linkHomepage" .Params.link.homepage "flyer" ($.Scratch.Get "image") "flyerCopyright" ($.Scratch.Get "imageCaption") "content" .Content "classNames" .Params.filter.kind ) -}}
    
    {{ $.Scratch.Delete "image" }}
    {{ $.Scratch.Delete "imageCaption" }}
{{- end -}}
{{- $.Scratch.Get "eventsList" | jsonify -}}